{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
    <h1>Exercise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ exercise.title }}</td>
            </tr>
            <tr>
                <th>SubTitle</th>
                <td>{{ exercise.subTitle|nl2br  }}</td>
            </tr>
            {% if exercise.picture is not empty %}
                <tr>
                    <th>Picture</th>
                    <td>
                        <img src="{{ asset(exo_img_dir ~ '/' ~ exercise.picture) }}">
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-light" href="{{ path('app_exercise_index') }}">Retour Ã  la liste</a>
        <a class="btn btn-success" href="{{ path('app_exercise_edit', {'id': exercise.id}) }}">edit</a>
        {{ include('exercise/_delete_form.html.twig') }}
    </div>
{% endblock %}
